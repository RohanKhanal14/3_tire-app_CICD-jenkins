# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=toor
MONGO_INITDB_DATABASE=mydatabase

# Backend Configuration
PORT=5050
NODE_ENV=production
MONGO_URI=mongodb://root:toor@mongodb:27017/mydatabase?authSource=admin

# Frontend Configuration
# Note: Frontend now uses nginx proxy (/api/*) to communicate with backend
# No need for VITE_API_URL environment variable anymore
# The nginx configuration handles routing /api/* requests to the backend service
